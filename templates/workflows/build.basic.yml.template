name: Build (Basic)

on:
  workflow_run:
    workflows: ["CI"]
    types: [completed]

jobs:
  build:
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Build project
        run: {{BUILD_COMMAND}}